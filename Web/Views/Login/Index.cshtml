
@model Web.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Konuşarak Öğren Test</title>

    <link href="~/Content/user.css" rel="stylesheet" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="col-md-8 col-md-offset-2" id="panel">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="text-center">KULLANICI GİRİŞ</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 login_elements">
                            <div class="row">
                                <div class="col-md-12 column">
                                    <input class="input-lg" type="text" name="UserName" placeholder="Kullanıcı Adı" id="username">
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger " })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 column">
                                    <input class="input-lg" type="password" name="Password" placeholder="Şifre" id="password">
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 column">
                                    <a href="@Url.Action("Create","Login")" class="btn btn-default btn-lg"  ><strong>Yeni Üye Kaydı</strong></a>
                                </div>
                                <div class="col-md-6 column">
                                    <button class="btn btn-default btn-lg" type="submit" id="btn_login"><strong>Giriş Yap</strong></button>
                                </div>
                            </div>
                            @if (ViewBag.Error != "")
                            {
                                if (ViewBag.Success != true)
                                {
                                    <div class="row">
                                        <div class="alert alert-danger">
                                            <strong>Lütfen</strong> @ViewBag.Error
                                        </div>

                                    </div>
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="alert alert-success">
                                            <strong>Lütfen</strong> @ViewBag.Error
                                        </div>

                                    </div>
                                }

                            }
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


</body>
</html>